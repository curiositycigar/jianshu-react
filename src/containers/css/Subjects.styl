.author-card
  .author-card-head
    padding: 10px 0
    h4
      font-size 18px
      font-weight 600
      color: #000
      padding: 10px 0
    p
      font-size 14px
      color #333
      padding: 5 25px
      margin-bottom 10px
  .author-card-body
    width 100%
    padding: 15px 0
    a
      display: inline-block
      width: 100%
      overflow: hidden
      word-break: keep-all
      white-space: pre
      text-overflow: ellipsis
      font-size: 14px
      color: #333