.author-list-header
  padding 5px
  font-size 14px
  a, span
    color #969696
  a
    float right

.author-list-more
  display block
  width 100%
  font-size 14px
  color #888888
  text-align center
  padding 8px
  margin 10px 5px 5px 5px
  border solid 1px #888888
  border-radius 4px
  background #f7f7f7

.author-list
  .author-item
    position: relative
    padding: 10px 5px 5px 5px;
    > a
      display: inline-block
      width: 48px
      height: 48px
      border-radius: 24px
      overflow: hidden
      > img
        width: 100%
        height: 100%
    .author-item-content
      display inline-block
      width: calc(100% - 100px)
      height: 48px
      vertical-align: top
      padding-left: 8px
      a, span
        display: block
        padding: 2px 0 4px
      a
        color: #000
        font-size: 14px
        &:hover
          color: #55a532
      span
        color: #666
        font-size: 12px
    .author-item-buttons
      height: 48px
      vertical-align: top
      text-align right
      display inline-block
      width: 50px
      a
        font-size: 14px
        color: #42c02e
