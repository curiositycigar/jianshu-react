.author-list
  .author-item
    position: relative
    padding: 10px 5px 5px 5px;
    >a
      display: inline-block
      width: 48px
      height: 48px
      border-radius: 24px
      overflow: hidden
      >img
        width: 100%
        height: 100%
    .author-item-content
      display inline-block
      width: calc(100% - 100px)
      height: 48px
      vertical-align: top
      padding-left: 5px
      a,span
        display: block
        padding: 2px 0 4px
      a
        color: #000
        font-size: 14px
        &:hover
          color: #55a532
      span
        color: #666
        font-size: 12px
    .author-item-buttons
      height: 48px
      vertical-align: top
      display inline-block
      width: 50px
      a
        font-size: 14px
        color: #42c02e
