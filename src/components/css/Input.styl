        >.input:first-child, >.input-affix-wrapper:first-child .input
          border-radius InputRadius 0 0 0
        >.input:last-child, >.input-affix-wrapper:last-child .input
          border-radius 0 InputRadius 0 0
      &:last-child
        .input-addon-before
          border-right none
          border-radius 0 0 0 InputRadius
        .input-addon-after
          border-left none
          border-radius 0 0 InputRadius 0
        >.input:first-child, >.input-affix-wrapper:first-child .input
          border-radius 0 0 0 InputRadius
        >.input:last-child, >.input-affix-wrapper:last-child .input
          border-radius 0 0 InputRadius 0
  &.input-group-col
