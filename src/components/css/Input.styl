      border-radius 5px 0 0 5px
      &.round
        border-radius InputRadius 0 0 InputRadius
    >.input:last-child
      border-radius 0 5px 5px 0
      &.round
        border-radius 0 InputRadius InputRadius 0
    >.input-affix-wrapper
      &:first-child .input
        border-radius 5px 0 0 5px
        &.round
          border-radius InputRadius 0 0 InputRadius
      &:last-child .input
        border-radius 0 5px 5px 0
        &.round
          border-radius 0 InputRadius InputRadius 0
